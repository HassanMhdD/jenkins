
pipeline {
    agent any 
    stages {
        stage('Build') { 
            steps {
                sh "mvn clean install"
            }
        }
        stage('Test') { 
            steps {
                sh "ls" 
            }
        }
        stage('Post Build') { 
            steps {
                archiveArtifacts artifacts: '*/*.war', followSymlinks: false
            }
        }
        stage('Deploy') { 
            steps {
                deploy adapters: [tomcat9(credentialsId: 'Jenkis.git2', path: '', url: 'http://www.localhost:8080/')], contextPath: '/spark', onFailure: false, war: 'target/*.war'
            }
        }
    }
}

