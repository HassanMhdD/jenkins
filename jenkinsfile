
pipeline {
    agent any 
    stages {
        stage('Build') { 
            steps {
                sh "mvn clean install"
            }
        }
        stage('Test') { 
            steps {
                sh "ls" 
            }
        }
        stage('Post Build') { 
            steps {
                archiveArtifacts artifacts: '*/*.war', followSymlinks: false
            }
        }
        stage('Deploy') { 
            steps {
         	sh "cp target/*.war /var/lib/jenkins/deploy/spark.war"   
	}
        }
    }
}

